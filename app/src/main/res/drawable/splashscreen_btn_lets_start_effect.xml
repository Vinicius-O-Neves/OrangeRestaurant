<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/btn_lets_start"/>
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <corners
                android:topRightRadius="11dp"
                android:bottomRightRadius="11dp"
                android:bottomLeftRadius="11dp"
                android:topLeftRadius="11dp" />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/btn_lets_start_2color"
                android:endColor="@color/btn_lets_start_3color"/>
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <corners
                android:topRightRadius="11dp"
                android:bottomRightRadius="11dp"
                android:bottomLeftRadius="11dp"
                android:topLeftRadius="11dp" />
        </shape>
    </item>
</selector>