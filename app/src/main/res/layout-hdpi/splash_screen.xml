<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="app.dealux.orangerestaurant.ui.splashscreen.SplashScreenViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splashscreen_background"
        tools:context=".ui.splashscreen.SplashScreen">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_lets_start"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/splashscreen_btn_lets_start_effect"

            android:padding="17dp"
            android:text="@string/btn_lets_start"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="280dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>